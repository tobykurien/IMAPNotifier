{
  "version": "1",
  "name": "IMAP Notifier",
  "launch_path": "/index.html",
  "description": "Periodically checks an IMAP server for new e-mail",
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "60": "/images/logo60.png",
    "64": "/images/logo64.png",
    "90": "/images/logo90.png",
    "120": "/images/logo120.png",
    "128": "/images/logo128.png"
  },
  "developer": {
    "name": "Toby Kurien",
    "url": "http://tobykurien.com"
  },
  "installs_allowed_from": [
    "*"
  ],
  "default_locale": "en",
  "permissions": {
    "desktop-notification": {
      "description": "To show notifications"
    },
    "alarms": {
      "description": "To periodically check for e-mails"
    }
  },
  "locales": {
   "en": {
      "name": "IMAP Notifier",
      "description": "Periodically checks an IMAP server for new e-mail"
    },
    "en-US": {
      "name": "IMAP Notifier",
      "description": "Periodically checks an IMAP server for new e-mail"
    }
  }
}
